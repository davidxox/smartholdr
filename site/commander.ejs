    <script>
      $('#chosen-value').on("change keyup paste", function(){
        $('#mockup').css('background-color', '#'+$(this).val());
      })
      $('#gostep2').click(function() {
        if($('#totalprice').val() != 0) {
          $('#step1').hide();
          $('#step2').show("slow");
        } else {
          alert("Vous devez entrer une quantité !");
        }
      })

      $(document).on('input change', '#rangebudget', function() {
            $('#price').html(computeTheAmount($(this).val()));
            var totalPrice = Math.round(computeTheAmount($(this).val())*(1+21/100));
            $('#ttcprice').html(totalPrice);
            $('#totalprice').val(totalPrice);
    });

      function computeTheAmount(quantity) {
        var fix_price = {"q1" : 0.90, "q2" : 0.80, "q3" : 0.70, "q4" : 0.60  };
        var bat = 30/(1+21/100);
        if(quantity < 1000 && quantity > 0) return Math.round(quantity*fix_price.q1+bat);
        if(quantity >= 1000 && quantity < 2000) return Math.round(quantity*fix_price.q2+bat);
        if(quantity >= 2000 && quantity < 5000) return Math.round(quantity*fix_price.q3+bat);
        if(quantity >= 5000 && quantity <= 10000) return Math.round(quantity*fix_price.q4+bat);
        return 0;
      }

    </script>
