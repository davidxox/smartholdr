      $(document).ready(function() {
         var output = document.querySelector("#volumebudget");
        output.style.left =0;
        
          function outputUpdateBudget(vol) {
            if (vol == 0) {
              var output = document.querySelector("#volumebudget");
              $('#volumebudget').html('0 pièce');
              output.style.left = '';
            } else {
              var output = document.querySelector("#volumebudget");
              output.value = vol;
              output.style.left = (vol * (1 / 100)) + '%';
        
              $('#volumebudget').append(' pièces')
            }
          
          }       
      })
          </script>

